<% if @message.errors.any? %>
  // handle validation errors later
<% else %>

  messagesContainer = document.querySelector('#real-messages-container');
  messagesContainer.insertAdjacentHTML('beforeend', '<%= j render "message", message: @message, user_is_author: true %>');
  input = document.querySelector('.chat-input');
  input.value = '';
  input.blur();
  scrollLastMessageIntoView();
<% end %>

<h2>Request <%= @product.name %> from <%= @owner.first_name %></h2>

<%= simple_form_for([@product, @request]) do |f| %>
  <% if @request.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @request.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :description %>
<!--     <iframe src="https://calendar.google.com/calendar/embed?src=jble4fpl370dm7pllm4919vf7s%40group.calendar.google.com&ctz=Europe/London" style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
    <input type="date"/> -->
    <div >
      <%= f.input :start_date, as: :string , input_html: {class: 'datepicker'}%>
      <%= f.input :end_date, as: :string , input_html: {class: 'datepicker'}%>
      </div>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>



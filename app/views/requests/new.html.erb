<div class="container">
  <div class="row">
    <div class="request-page">
      <div class="col-xs-9">
        <h3>Request <%= @product.name %> from <%= @product.user.first_name %></h3>
        <p>Introduce yourself, tell <%= @product.user.first_name %> what you want their product for, and how the handover could be arranged.</p>
        <%= render 'form' %>
      </div>
      <div class="col-xs-3">
        <div class="request-form">
          <div class="price-per-day">
            <h3> <strong>£<%= @product.price_per_day%></strong></h3>
            <p> (per day)</p>
          </div>
          <div class="stars border-bottom">
            <% (5-@product.user[:stars]).times do %>
              <i class="fa fa-star grey-star" aria-hidden="true"></i>
              <!-- ToDo: Add review count -->
            <% end %>
          </div>

          <div class="border-bottom price-split">
            <!-- ToDo: set days equal to picker -->
            <% days = 1 %>
            <% rental_fee = @product.price_per_day * days %>
            <p>Rental fee:</p> <p>£<%= rental_fee %></p>
          </div>
          <div class="border-bottom price-split">
            <p>Handover fee:</p> <p>£<%= @product.handover_fee.round(2)%></p>
          </div>
          <div class="border-bottom price-split">
            <% service_fee = (rental_fee + @product.handover_fee) * 0.1 %>
            <p>Service fee:</p> <p>£<%= service_fee %> </p>
          </div>
          <div class="price-split">
            <p><strong>Total:</strong></p> <p>£<%= rental_fee + service_fee + @product.price_per_day %> </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    var disableDates = <%= @dates.to_json.html_safe %>;
</script>

<% if @end != nil %>
  <p>
    <%= @start %>
    <%= @end %>
  </p>

  <p> <%= @end - @start %></p>
<% end %>

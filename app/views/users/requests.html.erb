
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Pending Requests</h1>

      <h2><%= @requests.count %></h2>

      <% @requests.each do |request| %>
        <div class="request">
          <div class="request-user-details">
            <% avatar = request.user.profile_photo? ? request.user.profile_photo : asset_path('default_avatar.png') %>
            <% if request.user.profile_photo? %>
              <%= image_tag request.user.profile_photo, class: "request-profile-photo" %>
            <% else %>
              <%= image_tag avatar, class: "request-profile-photo" %>
            <% end %>
            <div class="request-user-rating"></div>
          </div>
          <div class="request-details">
            <p class="request-info"><strong><%= request.user.first_name %></strong> wants to rent <strong><%= request.product.name %></strong> </p>
            <p class="request-date">From <%= request.start_date %> until <%= request.end_date %></p>
            <p class="request-description">"<%= request.description %>"</p>
            <p class="request-earnings">You will earn: Â£50</p>
          </div>
          <div class="request-confirm">
            <%= link_to "Accept", class: "request-accept btn btn-primary"  %>
            <%= link_to "Decline", class: "request-decline btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



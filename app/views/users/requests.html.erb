
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Pending Requests</h1>

      <h2><%= @requests.count %></h2>

      <% @requests.each do |request| %>
        <div class="request">
          <div class="request-user-details">
            <!-- image -->
            <div class="request-user-rating"></div>
          </div>
          <div class="request-details">
            <p><%= request.user.first_name %> wants to rent <%= request.product.name %></p>
            <p>From <%= request.start_date %> until <%= request.end_date %></p>
            <p>You will earn: Â£50</p>
          </div>
          <div class="request-confirm">
            <%= link_to "Accept", class: "btn btn-primary"  %>
            <%= link_to "Decline", class: "btn btn-primary"  %>
          </div>
        </div>
      <% end %>s
    </div>
  </div>
</div>



                <%= image_tag "Projector"%>
              </div>
              <div class="popular-itme-footer">
                <h3>Projectors</h3>
                <p>From £10/day</p>
              </div>
            </div>
            <div class="popular-items-card col-md-3 col-sm-4 col-xs-6">
              <div class='card-body'>
                <%= image_tag "Tent-2"%>
              </div>
              <div class="popular-itme-footer">
                <h3>Tents</h3>
                <p>From £8/day</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="popular-items-card col-md-3 col-sm-4 col-xs-6">
